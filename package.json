{
  "name": "dpos-ledger-api",
  "version": "1.0.4",
  "description": "This library eases the interaction with the corresponding ledger nano implementation",
  "main": "dist/es5/index.js",
  "types": "dist/es5/index.d.ts",
  "browser": "dist/browser/index.js",
  "scripts": {
    "coverage": "npm run tslint && nyc --exclude 'tests' -e '.ts' -r lcov npm run test-unit && cat ./coverage/lcov.info | coveralls",
    "docs": "shx rm -rf docs ; typedoc --theme node_modules/typedoc-clarity-theme/bin --excludePrivate --disableOutputCheck --hideGenerator --module commonjs --mode file --tsconfig ./tsconfig.json  --out docs/ src/; touch docs/.nojekyll ",
    "tslint": "tslint --project .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-unit": "mocha  --bail --require ts-node/register './tests/unit/**/*.spec.ts'",
    "test-int": "mocha  --bail --require ts-node/register './tests/integration/**/*.spec.ts'",
    "test-browser": "karma start karma.conf.js",
    "prepublish": "npm run package",
    "package": "shx rm -rf dist; webpack &&  tsc --outDir dist/es5 --target es5 -d"
  },
  "author": "Andrea <vekexasia@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bip32-path": "^0.4.2",
    "crc": "^3.5.0"
  },
  "devDependencies": {
    "@ledgerhq/hw-transport-node-hid": "^4.6.0",
    "@ledgerhq/hw-transport-u2f": "=3.0.0",
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.0.44",
    "@types/sinon": "^4.3.0",
    "browser-or-node": "^1.0.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "dpos-offline": "^1.3.3",
    "is-empty": "^1.2.0",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "karma-typescript": "^3.0.4",
    "karma-webpack": "^2.0.4",
    "libsodium-wrappers": "^0.7.3",
    "mocha": "^5.0.3",
    "nyc": "^11.6.0",
    "shx": "^0.2.2",
    "sinon": "^4.4.2",
    "ts-loader": "^2.3.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typedoc": "^0.7.1",
    "typedoc-clarity-theme": "^1.1.0",
    "typedoc-plugin-internal-external": "^1.0.9",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.7.0"
  }
}
